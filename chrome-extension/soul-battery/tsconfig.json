{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "../../",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["extension-popup.tsx", "../../lib/**/*", "../../components/soul-battery/**/*", "../../hooks/**/*"],
  "exclude": ["node_modules", "dist"]
}
